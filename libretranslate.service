[Unit]
Description=LibreTranslate WSGI with Gunicorn and Nginx
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/libretranslate/LibreTranslate
Environment="PATH=/root/libretranslate/LibreTranslate/env/bin"
ExecStart=/root/libretranslate/LibreTranslate/env/bin/gunicorn --workers 12 --bind unix:libretranslate.sock -m 007 wsgi:app
Restart=always
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=1

[Install]
WantedBy=multi-user.target
